{
  "comment": "SoftEther VPN Client Configuration File",
  "description": "Copy this file to ~/.config/softether-zig/config.json and edit as needed",
  
  "server": "vpn.example.com",
  "port": 443,
  "hub": "VPN",
  "username": "myuser",
  "password_hash": "base64-hashed-password-here",
  
  "skip_tls_verify": false,
  "use_compress": true,
  "udp_accel": false,
  "max_connection": 1,
  "mtu": 1486,
  
  "static_ip": {
    "ipv4_address": null,
    "ipv4_netmask": null,
    "ipv4_gateway": null,
    "ipv6_address": null,
    "ipv6_prefix": null,
    "ipv6_gateway": null,
    "dns_servers": ["8.8.8.8", "8.8.4.4"]
  },
  
  "routing": {
    "default_route": true,
    "accept_pushed_routes": true,
    "enable_custom_routes": false,
    "ipv4_include": null,
    "ipv4_exclude": null,
    "ipv6_include": null,
    "ipv6_exclude": null
  },
  
  "reconnect": {
    "enabled": true,
    "max_attempts": 0
  },
  
  "log_level": "info",
  
  "notes": [
    "Generate password hash with: ./zig-out/bin/vpnclient --gen-hash username password",
    "Command-line arguments override environment variables",
    "Environment variables override this config file",
    "Set password_hash to null to use password (not recommended)",
    "skip_tls_verify: true = skip certificate verification (INSECURE)",
    "max_connection: number of parallel TCP connections (1-32)",
    "mtu: default 1486 (1500 - 14 byte Ethernet header)",
    "reconnect.max_attempts: 0 = infinite retries",
    "routing.default_route: true = all traffic through VPN",
    "All fields are optional - CLI args and env vars will be used as fallback"
  ]
}
